
.message-wrap {
	width: 100%;
	height: 100%;
	overflow: hidden;
	position: absolute;
	top: 0;
	left: 0;
	-webkit-transition: 1000ms;
	-o-transition: 1000ms;
	transition: 1000ms;
}
.message-wrap ._p {
	width: 100%;
	height: 50rpx;
	background: #1296db;
	color: #fff;
	text-align: center;
	line-height: 50rpx;
	font-size: 26rpx;
	position: absolute;
	top: 0;
}

